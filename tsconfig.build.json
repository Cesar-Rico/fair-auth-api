// tsconfig.build.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,          // genera *.d.ts
    "declarationMap": true,
    "sourceMap": false,           // normalmente no subes mapas a npm
    "removeComments": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
